<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/base_color"
    android:orientation="vertical"
    android:fitsSystemWindows="true">
    <TextView
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:gravity="center"
        android:text="@string/title_activity_server"
        android:textColor="@color/common_white"
        android:background="@color/common_blue"
        android:textSize="@dimen/text_mid"/>
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scrollbars="none">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <LinearLayout
                android:id="@+id/service_tv_life_service"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:orientation="horizontal"
                android:background="@color/common_white"
                android:padding="10dp">

                <ImageView
                    android:layout_width="30dp"
                    android:layout_height="match_parent"
                    android:src="@drawable/serve1" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center_vertical"
                    android:paddingLeft="10dp"
                    android:paddingRight="10dp"
                    android:text="@string/service_tv_life_service"
                    android:textColor="@color/common_black"
                    android:textSize="@dimen/text_small" />
            </LinearLayout>
            <include layout="@layout/view_interval_gray"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="80dp"
                android:background="@color/common_white"
                android:orientation="horizontal">
                <TextView
                    android:id="@+id/service_tv_yinafu"
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:padding="10dp"
                    android:textSize="@dimen/text_small"
                    android:text="@string/service_tv_yinafu"
                    android:textColor="@color/common_black"
                    android:drawableTop="@drawable/serve_4"/>
                <TextView
                    android:id="@+id/service_tv_shopping"
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:textSize="@dimen/text_small"
                    android:padding="10dp"
                    android:text="@string/service_tv_shopping"
                    android:textColor="@color/common_black"
                    android:drawableTop="@drawable/shopping1"/>
                <TextView
                    android:id="@+id/service_tv_house"
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:textSize="@dimen/text_small"
                    android:padding="10dp"
                    android:text="@string/service_tv_house"
                    android:textColor="@color/common_black"
                    android:drawableTop="@drawable/house"/>
                <TextView
                    android:id="@+id/service_tv_eat"
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:textSize="@dimen/text_small"
                    android:padding="10dp"
                    android:text="@string/service_tv_eat"
                    android:textColor="@color/common_black"
                    android:drawableTop="@drawable/eat"/>
            </LinearLayout>
            <include layout="@layout/view_interval_gray"/>
            <LinearLayout
                android:id="@+id/service_tv_health_service"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:orientation="horizontal"
                android:background="@color/common_white"
                android:padding="10dp">

                <ImageView
                    android:layout_width="30dp"
                    android:layout_height="match_parent"
                    android:src="@drawable/user2" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center_vertical"
                    android:paddingLeft="10dp"
                    android:paddingRight="10dp"
                    android:text="@string/service_tv_health_service"
                    android:textColor="@color/common_black"
                    android:textSize="@dimen/text_small" />
            </LinearLayout>
            <include layout="@layout/view_interval_gray"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="80dp"
                android:background="@color/common_white"
                android:orientation="horizontal">
                <TextView
                    android:id="@+id/service_tv_doctor"
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:padding="10dp"
                    android:textSize="@dimen/text_small"
                    android:text="@string/service_tv_doctor"
                    android:textColor="@color/common_black"
                    android:drawableTop="@drawable/doctor2"/>
                <TextView
                    android:id="@+id/service_tv_telemedicine"
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:textSize="@dimen/text_small"
                    android:padding="10dp"
                    android:text="@string/service_tv_telemedicine"
                    android:textColor="@color/common_black"
                    android:drawableTop="@drawable/bird"/>
                <TextView
                    android:id="@+id/service_tv_healthy"
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:textSize="@dimen/text_small"
                    android:padding="10dp"
                    android:text="@string/service_tv_healthy"
                    android:textColor="@color/common_black"
                    android:drawableTop="@drawable/message4"/>
                <TextView
                    android:id="@+id/service_tv_channel"
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:textSize="@dimen/text_small"
                    android:padding="10dp"
                    android:text="@string/service_tv_channel"
                    android:textColor="@color/common_black"
                    android:drawableTop="@drawable/doctor3"/>
            </LinearLayout>
            <LinearLayout
                android:layout_marginTop="@dimen/text_less_mid"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/common_white"
                    android:paddingLeft="@dimen/text_less_mid"
                    android:paddingRight="@dimen/text_less_mid"
                    android:paddingTop="@dimen/text_less_mid"
                    android:orientation="vertical">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="30dp"
                        android:orientation="horizontal">
                        <ImageView
                            android:layout_width="30dp"
                            android:layout_height="30dp"
                            android:layout_marginRight="@dimen/text_less_mid"
                            android:src="@drawable/express"/>
                        <TextView
                            android:layout_width="0dp"
                            android:layout_weight="1"
                            android:layout_height="match_parent"
                            android:gravity="center_vertical"
                            android:text="信息"/>
                        <TextView
                            android:layout_width="0dp"
                            android:layout_weight="1"
                            android:layout_height="match_parent"
                            android:gravity="center_vertical|right"
                            android:text="12:00"/>
                    </LinearLayout>
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="40dp"
                        android:text="暂无信息"
                        android:textColor="@color/common_black"
                        android:gravity="center"
                        android:textSize="@dimen/text_mid"/>
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="30dp"
                        android:text="没有相关信息"
                        android:textColor="@color/common_black"
                        android:gravity="center"
                        android:textSize="@dimen/text_small"/>
                </LinearLayout>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="立即查看"
                    android:background="@color/navigation_text"
                    android:textColor="@color/common_black"
                    android:gravity="center"
                    android:textSize="@dimen/text_less_mid"/>
            </LinearLayout>
            <LinearLayout
                android:layout_marginTop="@dimen/text_less_mid"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/common_white"
                    android:paddingLeft="@dimen/text_less_mid"
                    android:paddingRight="@dimen/text_less_mid"
                    android:paddingTop="@dimen/text_less_mid"
                    android:orientation="vertical">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="30dp"
                        android:orientation="horizontal">
                        <ImageView
                            android:layout_width="30dp"
                            android:layout_height="30dp"
                            android:layout_marginRight="@dimen/text_less_mid"
                            android:src="@drawable/express"/>
                        <TextView
                            android:layout_width="0dp"
                            android:layout_weight="1"
                            android:layout_height="match_parent"
                            android:gravity="center_vertical"
                            android:text="信息"/>
                        <TextView
                            android:layout_width="0dp"
                            android:layout_weight="1"
                            android:layout_height="match_parent"
                            android:gravity="center_vertical|right"
                            android:text="12:00"/>
                    </LinearLayout>
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="40dp"
                        android:text="暂无信息"
                        android:textColor="@color/common_black"
                        android:gravity="center"
                        android:textSize="@dimen/text_mid"/>
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="30dp"
                        android:text="没有相关信息"
                        android:textColor="@color/common_black"
                        android:gravity="center"
                        android:textSize="@dimen/text_small"/>
                </LinearLayout>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="立即查看"
                    android:background="@color/navigation_text"
                    android:textColor="@color/common_black"
                    android:gravity="center"
                    android:textSize="@dimen/text_less_mid"/>
            </LinearLayout>
            <LinearLayout
                android:layout_marginTop="@dimen/text_less_mid"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/common_white"
                    android:paddingLeft="@dimen/text_less_mid"
                    android:paddingRight="@dimen/text_less_mid"
                    android:paddingTop="@dimen/text_less_mid"
                    android:orientation="vertical">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="30dp"
                        android:orientation="horizontal">
                        <ImageView
                            android:layout_width="30dp"
                            android:layout_height="30dp"
                            android:layout_marginRight="@dimen/text_less_mid"
                            android:src="@drawable/express"/>
                        <TextView
                            android:layout_width="0dp"
                            android:layout_weight="1"
                            android:layout_height="match_parent"
                            android:gravity="center_vertical"
                            android:text="信息"/>
                        <TextView
                            android:layout_width="0dp"
                            android:layout_weight="1"
                            android:layout_height="match_parent"
                            android:gravity="center_vertical|right"
                            android:text="12:00"/>
                    </LinearLayout>
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="40dp"
                        android:text="暂无信息"
                        android:textColor="@color/common_black"
                        android:gravity="center"
                        android:textSize="@dimen/text_mid"/>
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="30dp"
                        android:text="没有相关信息"
                        android:textColor="@color/common_black"
                        android:gravity="center"
                        android:textSize="@dimen/text_small"/>
                </LinearLayout>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="立即查看"
                    android:background="@color/navigation_text"
                    android:textColor="@color/common_black"
                    android:gravity="center"
                    android:textSize="@dimen/text_less_mid"/>
            </LinearLayout>
        </LinearLayout>

    </ScrollView>

</LinearLayout>
