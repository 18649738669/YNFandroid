<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.AppBarLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:showDividers="none"
    android:theme="@style/AppTheme.AppBarOverlay">

    <android.support.v7.widget.Toolbar
        android:id="@+id/tb_time_date_toolbar"
        android:layout_width="match_parent"
        android:layout_height="44dp"
        app:contentInsetEnd="0dp"
        app:contentInsetLeft="0dp"
        app:contentInsetRight="0dp"
        app:contentInsetStart="0dp"
        app:popupTheme="@style/AppTheme.PopupOverlay">


        <RelativeLayout
            android:id="@+id/tool_bar_time_date"
            android:layout_width="match_parent"
            android:layout_height="44dp"
            android:background="@color/common_blue">
            <RelativeLayout
                android:id="@+id/tool_bar_time_date_btn_back"
                android:layout_width="wrap_content"
                android:layout_height="match_parent">

                <ImageView

                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="16dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginBottom="10dp"
                    android:layout_marginRight="16dp"
                    android:background="@null"
                    android:scaleType="fitCenter"
                    android:src="@drawable/btn_back" />
            </RelativeLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:layout_marginRight="50dp"
                android:layout_marginLeft="50dp">
                <TextView
                    android:id="@+id/tool_bar_time_date_title_step_gauge"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:gravity="center"
                    android:text="@string/tool_bar_time_date_title_step_gauge"
                    android:textColor="@color/white_text"
                    android:textSize="@dimen/text_toolbar_title" />
                <TextView
                    android:id="@+id/tool_bar_time_date_title_sleep"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:layout_centerInParent="true"
                    android:text="@string/tool_bar_time_date_title_sleep"
                    android:textColor="@color/white_text"
                    android:textSize="@dimen/text_toolbar_title" />
                <TextView
                    android:id="@+id/tool_bar_time_date_title_heart_rate"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:layout_centerInParent="true"
                    android:text="@string/tool_bar_time_date_title_heart_rate"
                    android:textColor="@color/white_text"
                    android:textSize="@dimen/text_toolbar_title" />
                <TextView
                    android:id="@+id/tool_bar_time_date_title_blood_pressure"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:layout_centerInParent="true"
                    android:text="@string/tool_bar_time_date_title_blood_pressure"
                    android:textColor="@color/white_text"
                    android:textSize="@dimen/text_toolbar_title" />
                <TextView
                    android:id="@+id/tool_bar_time_date_title_blood_sugar"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:layout_centerInParent="true"
                    android:text="@string/tool_bar_time_date_title_blood_sugar"
                    android:textColor="@color/white_text"
                    android:textSize="@dimen/text_toolbar_title" />

            </LinearLayout>
        </RelativeLayout>
    </android.support.v7.widget.Toolbar>
</android.support.design.widget.AppBarLayout>


