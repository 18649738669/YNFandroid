<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:fitsSystemWindows="true">
    <include layout="@layout/tb_friends_circle"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="@dimen/text_small"
        android:layout_marginTop="@dimen/text_mid"
        android:layout_marginLeft="@dimen/text_small"
        android:layout_marginBottom="@dimen/text_small"
        android:text="@string/add_smart_devices_text_1"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@drawable/bg_style_1"
        android:layout_marginLeft="@dimen/text_small"
        android:layout_marginRight="@dimen/text_small"
        android:orientation="horizontal">
        <EditText
            android:id="@+id/add_smart_devices_et_number"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:gravity="center_vertical"
            android:lines="1"
            android:layout_height="match_parent"
            android:background="@null"/>
        <TextView
            android:id="@+id/add_smart_devices_tv_btn"
            android:layout_width="80dp"
            android:layout_height="match_parent"
            android:gravity="center"
            android:textColor="@color/common_white"
            android:background="@drawable/bg_style_6"
            android:text="@string/add_smart_devices_text_btn"/>
    </LinearLayout>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="@dimen/text_small"
        android:layout_marginTop="@dimen/text_mid"
        android:layout_marginLeft="@dimen/text_small"
        android:layout_marginBottom="@dimen/text_small"
        android:text="@string/add_smart_devices_text_name"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@drawable/bg_style_1"
        android:layout_marginLeft="@dimen/text_small"
        android:layout_marginRight="@dimen/text_small"
        android:orientation="horizontal">
        <EditText
            android:id="@+id/add_smart_devices_et_name"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:lines="1"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:background="@null"/>

    </LinearLayout>

</LinearLayout>
