<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    android:orientation="vertical">
    <include layout="@layout/tb_common"/>
    <EditText
        android:id="@+id/binding_family_et_member_id"
        android:layout_margin="30dp"
        android:layout_width="match_parent"
        android:background="@drawable/bg_style_1"
        android:hint="@string/binding_family_et_member_id"
        android:textColor="@color/common_black"
        android:gravity="center_vertical"
        android:textSize="@dimen/text_mid"
        android:singleLine="true"
        android:layout_height="60dp" />
    
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:orientation="horizontal"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp">
        <EditText
            android:id="@+id/binding_family_et_code"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:gravity="center_vertical"
            android:background="@drawable/bg_style_1"
            android:hint="@string/binding_family_et_code"
            android:textColor="@color/common_black"
            android:textSize="@dimen/text_mid"
            android:singleLine="true"
            android:layout_height="match_parent" />
        <TextView
            android:id="@+id/binding_family_tv_code"
            android:layout_width="100dp"
            android:layout_marginLeft="20dp"
            android:layout_height="match_parent"
            android:background="@drawable/bg_style_5"
            android:textSize="@dimen/text_mid"
            android:gravity="center"
            android:textColor="@color/common_blue"
            android:text="@string/binding_family_tv_code"
            />
    </LinearLayout>

    <Button
        android:id="@+id/binding_family_btn_add"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_margin="30dp"
        android:background="@drawable/btn_normal_1"
        android:text="添加"
        android:textColor="@color/common_white"
        android:textSize="@dimen/text_large"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="30dp"
        android:visibility="gone"
        android:layout_marginRight="30dp"
        android:textSize="@dimen/text_large"
        android:text="请确保主成员的APP用户处于登录状态，并且能在规定时间内告知您验证码，完成成员绑定"/>

</LinearLayout>
