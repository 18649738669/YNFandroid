<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center_horizontal"
    android:orientation="vertical">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:textSize="@dimen/text_large"
        android:textColor="@color/common_blue"
        android:text="选择您的血型"
        android:gravity="center"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="horizontal">
        <ImageView
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:scaleType="center"
            android:src="@drawable/a"/>
        <ImageView
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:scaleType="center"
            android:src="@drawable/b"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:gravity="top|center"
        android:layout_height="50dp"
        android:orientation="horizontal">
        <ImageButton
            android:id="@+id/add_family_iv_blood_a"
            android:layout_marginBottom="20dp"
            android:layout_marginRight="150dp"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:src="@drawable/choose_no"
            android:scaleType="center"/>
        <ImageButton
            android:id="@+id/add_family_iv_blood_b"
            android:layout_marginBottom="20dp"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:src="@drawable/choose_no"
            android:scaleType="center"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="horizontal">
        <ImageView
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:scaleType="center"
            android:src="@drawable/ab"/>
        <ImageView
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:scaleType="center"
            android:src="@drawable/o"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:gravity="top|center"
        android:layout_height="50dp"
        android:orientation="horizontal">
        <ImageButton
            android:id="@+id/add_family_iv_blood_ab"
            android:layout_marginBottom="20dp"
            android:layout_marginRight="150dp"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:src="@drawable/choose_no"
            android:scaleType="center"/>
        <ImageButton
            android:id="@+id/add_family_iv_blood_o"
            android:layout_marginBottom="20dp"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:src="@drawable/choose_no"
            android:scaleType="center"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="horizontal"
        android:layout_marginBottom="30dp">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="其他"
            android:textColor="@color/common_blue"
            android:textSize="@dimen/text_mid"/>
        <ImageButton
            android:id="@+id/add_family_iv_blood_other"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:src="@drawable/circle_no"
            android:background="@null"
            android:scaleType="center"/>
    </LinearLayout>


</LinearLayout>
