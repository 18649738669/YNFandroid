<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:orientation="horizontal"
        android:gravity="center_vertical">
        <com.makeramen.roundedimageview.RoundedImageView
            android:id="@+id/members_integral_rounded_img"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_marginLeft="@dimen/text_large"
            android:layout_marginRight="@dimen/text_large"
            android:src="@drawable/rounded_img2"
            android:scaleType="centerCrop"
            app:riv_oval="true" />
        <TextView
            android:id="@+id/members_integral_name"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="名字"
            android:gravity="center_vertical"
            android:textColor="@color/common_black"
            android:textSize="@dimen/text_mid"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:orientation="vertical"
        android:background="@color/common_white"
        android:layout_marginBottom="20dp"
        android:gravity="center_horizontal">
        <ImageView
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:src="@drawable/crown"
            android:scaleType="fitCenter"/>
        <TextView
            android:id="@+id/members_integral_sum"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="总积分:"
            android:layout_marginTop="5dp"
            android:textColor="@color/common_black"
            android:textSize="@dimen/text_mid"/>

    </LinearLayout>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:drawableLeft="@drawable/the_detail"
        android:background="@color/common_white"
        android:paddingLeft="@dimen/text_mid"
        android:text="积分明细"
        android:textColor="@color/common_black"
        android:gravity="center_vertical"
        android:drawablePadding="@dimen/text_mid"/>
    <include layout="@layout/view_interval_gray"/>

</LinearLayout>
