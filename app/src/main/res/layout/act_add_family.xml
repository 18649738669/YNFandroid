<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    android:orientation="vertical">
    <include layout="@layout/tb_common"/>
    <com.yinaf.dragon.Content.CustomUi.CustomViewPager
        android:id="@+id/add_family_vp"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:paddingTop="0.5dp"
        android:background="@color/signature_text"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/add_family_tv_previous_step"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:textSize="@dimen/text_toolbar_title"
            android:gravity="center"
            android:background="@color/common_white"
            android:textColor="@color/common_black"
            android:text="@string/add_family_tv_previous_step"
            android:layout_weight="1"/>
        <TextView
            android:id="@+id/add_family_tv_next_step"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:textSize="@dimen/text_toolbar_title"
            android:background="@color/common_blue"
            android:gravity="center"
            android:textColor="@color/common_white"
            android:text="@string/add_family_tv_next_step"
            />
    </LinearLayout>

</LinearLayout>
