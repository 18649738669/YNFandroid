<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:fitsSystemWindows="true"
    android:orientation="vertical">
    <include layout="@layout/tb_common"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:orientation="horizontal"
        android:background="@color/split_line"
        android:gravity="center_vertical">
        <com.makeramen.roundedimageview.RoundedImageView
            android:id="@+id/health_report_rounded_img"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:src="@drawable/rounded_img2"
            android:scaleType="centerCrop"
            android:layout_marginLeft="@dimen/text_large"
            android:layout_marginRight="@dimen/text_large"
            app:riv_oval="true" />
        <TextView
            android:id="@+id/health_report_tv_name"
            android:layout_width="wrap_content"
            android:textColor="@color/common_black"
            android:layout_height="30dp"
            android:textSize="@dimen/text_mid"
            android:text="@string/my_tv_name"/>
    </LinearLayout>
    <android.support.v7.widget.RecyclerView
        android:id="@+id/health_report_recycler"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    </android.support.v7.widget.RecyclerView>





</LinearLayout>
