<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="280dp"
    android:layout_height="300dp"
    android:background="@drawable/bg_style_2">

    <ImageView
        android:id="@+id/dialog_update_apk_image"
        android:layout_width="81.5dp"
        android:layout_height="69dp"
        android:layout_marginTop="10.5dp"
        android:layout_marginBottom="7.5dp"
        android:src="@drawable/logo"
        android:layout_centerHorizontal="true"/>
    <TextView
        android:id="@+id/dialog_update_apk_tv_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:text="软件更新提示"
        android:layout_gravity="center_horizontal"
        android:layout_below="@id/dialog_update_apk_image"
        android:textColor="@color/common_blue"
        android:textSize="@dimen/text_mid" />

    <TextView
        android:id="@+id/dialog_update_apk_tv_tip_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="新版本特性"
        android:textSize="@dimen/text_small"
        android:textColor="@color/light_green_text"
        android:layout_below="@+id/dialog_update_apk_tv_title"
        android:layout_marginTop="24dp"
        android:layout_marginLeft="24dp"
        android:layout_marginBottom="8dp"/>

    <TextView
        android:id="@+id/dialog_update_apk_tv_tip_detail"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text=""
        android:textSize="@dimen/text_small"
        android:textColor="@color/light_green_text"
        android:maxLines="5"
        android:ellipsize="end"
        android:layout_below="@+id/dialog_update_apk_tv_tip_title"
        android:layout_marginLeft="24dp"
        android:layout_marginRight="24dp"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="12dp"
        android:paddingLeft="16dp"
        android:paddingRight="16dp">
        <Button
            android:id="@+id/dialog_update_apk_btn_cancel"
            android:layout_width="94dp"
            android:layout_height="33dp"
            android:text="取消"
            android:textColor="@color/common_white"
            android:visibility="gone"
            android:textSize="@dimen/text_mid"
            android:background="@drawable/btn_normal_1"/>

        <Button
            android:id="@+id/dialog_update_apk_btn_download"
            android:layout_width="104dp"
            android:layout_height="33dp"
            android:layout_marginLeft="50dp"
            android:text="下载更新"
            android:textColor="@color/white_text"
            android:textSize="@dimen/text_mid"
            android:background="@drawable/btn_normal_1"/>
    </LinearLayout>
</RelativeLayout>

