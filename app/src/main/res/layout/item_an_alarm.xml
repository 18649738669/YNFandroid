<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="90dp"
    android:orientation="vertical">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:padding="10dp">
        <ImageView
            android:id="@+id/an_alarm_lv_item_image"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:src="@drawable/fb_msg_tip"
            android:layout_marginRight="10dp"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <TextView
                android:id="@+id/an_alarm_lv_item_title"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:gravity="center_vertical"
                android:maxEms="13"
                android:textSize="@dimen/text_small"
                android:singleLine="true"
                android:textColor="@color/common_black"
                android:ellipsize="end"
                android:text="标题标题标题标题标题标题标题"
                android:layout_weight="1"/>
            <TextView
                android:id="@+id/an_alarm_lv_item_time"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:gravity="right|center_vertical"
                android:text="2018-04-14"
                android:paddingRight="10dp"
                android:textSize="@dimen/text_small"
                android:layout_weight="1"/>
        </LinearLayout>
    </LinearLayout>
    <include layout="@layout/view_interval_gray"/>
</LinearLayout>
