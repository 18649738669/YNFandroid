<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:fitsSystemWindows="true"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <include layout="@layout/tb_friends_circle"/>

    <android.support.v7.widget.RecyclerView
        android:id="@+id/friends_circle_lv"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp">
        <TextView
            android:id="@+id/friends_circle_tv_add_family"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_marginRight="0.5dp"
            android:layout_height="match_parent"
            android:gravity="center"
            android:textSize="@dimen/text_mid"
            android:textColor="@color/common_white"
            android:text="@string/friends_circle_tv_add_family"
            android:background="@color/common_blue"/>
        <TextView
            android:id="@+id/friends_circle_tv_binding_family"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:text="@string/friends_circle_tv_binding_family"
            android:layout_height="match_parent"
            android:layout_marginLeft="0.5dp"
            android:gravity="center"
            android:textSize="@dimen/text_mid"
            android:textColor="@color/common_white"
            android:background="@color/common_blue"/>
    </LinearLayout>



</LinearLayout>
