<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center_horizontal"
    android:orientation="vertical">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:textColor="@color/common_blue"
        android:textSize="@dimen/text_more_large"
        android:gravity="center"
        android:text="选择您的身高"/>
    <ImageView
        android:layout_width="200dp"
        android:layout_height="250dp"
        android:scaleType="fitCenter"
        android:src="@drawable/height"/>
    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:gravity="center"
        android:background="@drawable/according">
        <TextView
            android:id="@+id/add_family_tv_height"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:text="170CM"
            android:gravity="top|center"
            android:padding="5dp"
            android:textColor="@color/common_white"
            android:textSize="@dimen/text_mid"/>
    </RelativeLayout>
    <SeekBar
        android:id="@+id/add_family_sb_height"
        android:layout_width="match_parent"
        android:layout_height="20dp"
        android:paddingTop="5dp"
        android:paddingBottom="5dp"
        android:maxHeight="8dp"
        android:minHeight="8dp"
        android:max="60"
        android:layout_alignParentBottom="true"
        android:progressDrawable="@drawable/stripes"
        android:thumb="@drawable/drag_block"
        android:thumbOffset="0dp"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:layout_margin="10dp"
        android:layout_height="wrap_content">
        <TextView
            android:layout_marginTop="20dp"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:text="140CM"
            android:gravity="center|left"
            android:padding="5dp"
            android:textColor="@color/common_blue"
            android:textSize="@dimen/text_mid"/>
        <TextView
            android:layout_marginTop="20dp"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:text="200CM"
            android:gravity="center|right"
            android:padding="5dp"
            android:textColor="@color/common_blue"
            android:textSize="@dimen/text_mid"/>

    </LinearLayout>

</LinearLayout>
