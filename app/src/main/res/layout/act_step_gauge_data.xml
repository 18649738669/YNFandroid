    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    android:orientation="vertical">

    <include layout="@layout/tb_common" />

    <com.yinaf.dragon.Content.CustomUi.CustomRefreshAndLoadMoreView
        android:id="@+id/step_gauge_data_refresh_and_load_more"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <com.yinaf.dragon.Content.CustomUi.CustomLoadMoreListView
            android:id="@+id/step_gauge_data_lv"
            android:layout_width="match_parent"
            android:divider="@null"
