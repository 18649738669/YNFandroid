<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
    <LinearLayout
        android:id="@+id/medical_report_item_ll"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:layout_marginTop="10dp"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:background="@color/common_light_white">
        <LinearLayout
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:text="编号："
                    android:layout_marginLeft="10dp"
                    android:textColor="@color/common_gray"
                    android:textSize="@dimen/text_small"
                    android:layout_marginRight="10dp"
                    android:gravity="center"/>
                <TextView
                    android:id="@+id/medical_report_item_tv_number"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:text="11111111111111111111111111111111111111111111111"
                    android:textColor="@color/common_gray"
                    android:textSize="@dimen/text_small"
                    android:gravity="center_vertical|left"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:text="时间："
                    android:layout_marginRight="10dp"
                    android:textColor="@color/common_gray"
                    android:textSize="@dimen/text_small"
                    android:gravity="center"
                    android:layout_marginLeft="10dp"/>
                <TextView
                    android:id="@+id/medical_report_item_tv_time"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:text="1990-01-01"
                    android:textColor="@color/common_gray"
                    android:textSize="@dimen/text_small"
                    android:gravity="center_vertical|left"/>
            </LinearLayout>
        </LinearLayout>
        <ImageView
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:src="@drawable/right"
            android:layout_marginRight="5dp"
            android:layout_marginLeft="10dp"
            android:scaleType="centerCrop"/>
    </LinearLayout>
    <include layout="@layout/view_interval_gray"/>

</LinearLayout>
